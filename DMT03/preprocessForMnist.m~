function [ output ] = preprocessForMnist( input )
% output : Mnist Style 2-value image

% first step : make it 2-value
input = rgb2gray(input);
input = im2bw(input, graythresh(input));
% second step : make it square
[m, n] = size(input);
outputSize = max([m, n]);
output = zeros(outputSize, outputSize);
if m >= n
    aliasing = floor((outputSize - n) / 2);
    output(1:outputSize, 1 + aliasing : 1 + aliasing + n) = input(:, :);
else
    aliasing = floor((outputSize - m>
end
end

